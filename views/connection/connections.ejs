            <div class="container">
                <div class="row">
                    <div class="col-md-8 bodyText">
                       
                        <% if(connections.length){ %>
                            <ul>
                                <% connections.forEach( function (connection){ %>
                                    <li><a href="/connections/<%= connection.id %>"><%= connection.name %></a>, Topic: <%= connection.topic %></li>
                            <% }); %>
                            </ul>
                        <% }else{ %>
                            <p>There are no connections at this time</p>
                        <% } %>

                    </div>
                </div>
            </div>
